		Thread.sleep(3000);
DriverFactory.getDriver().findElement(By.xpath("//span[@class='k-dropdown-wrap k-state-default']//input[@class='k-input']")).sendKeys("India");

		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.id("biCity")).sendKeys("HYD");
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.id("biZipCode")).sendKeys("5222342");
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//span[contains(text(),'Continue')]")).click();
		Thread.sleep(5000);
		DriverFactory.getDriver().findElement(By.xpath("//input[@id='licenseAgreementLabel']")).click();
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//span[contains(text(),'Continue to payment')]")).click();
		Thread.sleep(3000);
	}
	
	
	
	
	
	
