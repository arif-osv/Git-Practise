	@Then("user click on the shopping cart")
	public void shoppingcart() throws InterruptedException
	{
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//button[@id='onetrust-accept-btn-handler']")).click();
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//body/nav[@id='js-tlrk-nav']/section[1]/div[1]/div[1]/ul[2]/li[2]/a[1]/*[1]")).click();
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//thead/tr[5]/th[1]/div[1]/a[1]")).click();
		Thread.sleep(3000);
		DriverFactory.getDriver().findElement(By.xpath("//button[@id='onetrust-accept-btn-handler']")).click();
		Thread.sleep(10000);
		DriverFactory.getDriver().findElement(By.xpath("//tbody/tr[@id='801']/td[2]/div[2]/quantity-select[1]/div[1]/kendo-dropdownlist[1]/span[1]/span[2]/span[1]")).click();
		Thread.sleep(5000);
		
		
		
		WebElement element = DriverFactory.getDriver().findElement(By.xpath("//span[contains(text(),'4')]"));
		JavascriptExecutor executor = (JavascriptExecutor)DriverFactory.getDriver();
		executor.executeScript("arguments[0].click();", element);

		Thread.sleep(3000);
	WebElement ele=	DriverFactory.getDriver().findElement(By.xpath("//body/div[1]/div[1]/shopping-cart-app[1]/section[1]/your-order[1]/div[1]/div[1]/div[7]/button[1]"));
	executor.executeScript("arguments[0].click();", ele);
		
	Thread.sleep(3000);
		
		
	}
	
